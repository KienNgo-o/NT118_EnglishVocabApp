<resources>
    <!-- Theme cơ bản cho chế độ tối. Đổi tên để khớp với theme trong manifest để áp dụng giá trị night. -->
    <style name="Theme.NT118_EnglishVocabApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Màu chính ở chế độ ban đêm (ghi đè trong values-night/colors.xml nếu cần). -->
        <item name="colorPrimary">@color/light_purple</item>
        <item name="colorPrimaryVariant">@color/light_purple</item>
        <!-- Dùng màu trắng trên nền tối để tương phản trong chế độ night -->
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <!-- Màu thanh trạng thái. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>