<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_background"
    android:paddingBottom="60dp"
    tools:context=".ui.home.HomeFragment">

    <!-- Header: 20% height (~2/10) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/purple_700"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.20"
        android:paddingStart="20dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp">

        <LinearLayout
            android:id="@+id/header_text_block"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/header_right"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/text_greeting_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account_name"
                android:textColor="@color/on_purple"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_greeting_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/greeting_small"
                android:textColor="@color/on_purple"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Right side: streak number + avatar -->
        <LinearLayout
            android:id="@+id/header_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center_vertical">

            <!-- Streak icon and number -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginEnd="12dp">

                <ImageView
                    android:id="@+id/image_streak"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/streak"
                    android:contentDescription="@string/cd_streak_icon" />

                <TextView
                    android:id="@+id/text_streak_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/streak_number"
                    android:textColor="@color/on_purple"
                    android:textStyle="bold"
                    android:layout_marginStart="6dp" />
            </LinearLayout>

            <!-- Avatar (round) -->
            <ImageView
                android:id="@+id/image_avatar"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/image_avatar"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_avatar_bg"
                android:contentDescription="@string/cd_avatar"
                android:clickable="true"
                android:focusable="true"
                android:outlineProvider="background"
                android:clipToOutline="true" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Quote card: placed to overlap header and lower content (title moved inside) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_dialog"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:translationZ="12dp"
        android:layout_marginTop="-45dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@color/card_background"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/text_today_quotes_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/today_quote_title"
                android:textSize="12sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="3dp" />

            <TextView
                android:id="@+id/textDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="4"
                android:paddingTop="3dp"
                android:text="@string/today_quote"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Content area below the quote card (scroll) -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/main_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/card_dialog"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Study days (streak) area: moved into lower part (scroll) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_study_days"
                android:layout_width="match_parent"
                android:layout_marginTop="12dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/text_study_days_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/study_days"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_marginTop="6dp"
                        android:layout_marginStart="6dp"
                        android:textColor="@color/text_primary" />

                    <!-- Calendar header: month and navigation arrows -->
                    <LinearLayout
                        android:id="@+id/calendar_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="6dp">

                        <ImageButton
                            android:id="@+id/button_prev_month"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/next_arrow"
                            android:rotation="180"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@string/cd_prev" />

                        <TextView
                            android:id="@+id/text_month_label"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/cd_calendar"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:gravity="center" />

                        <ImageButton
                            android:id="@+id/button_next_month"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/next_arrow"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@string/cd_next" />
                    </LinearLayout>

                    <!-- Week labels row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/label_mon"
                            android:gravity="center"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/label_tue"
                            android:gravity="center"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/label_wed"
                            android:gravity="center"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/label_thu"
                            android:gravity="center"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/label_fri"
                            android:gravity="center"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/label_sat"
                            android:gravity="center"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/label_sun"
                            android:gravity="center"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                    <!-- Calendar grid: 7 columns -->
                    <GridLayout
                        android:id="@+id/calendar_grid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="7"
                        android:rowCount="6"
                        android:useDefaultMargins="true"
                        android:alignmentMode="alignMargins"
                        android:padding="6dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Cards (each is independent) -->

            <androidx.cardview.widget.CardView
                android:id="@+id/card_quiz"
                android:layout_width="match_parent"
                android:layout_marginTop="12dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/text_quiz_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="@string/quiz_taken"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/quiz_color"
                                android:contentDescription="@string/cd_icon" />

                            <TextView
                                android:id="@+id/text_quiz_topic"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/business"
                                android:layout_marginStart="8dp"
                                android:textColor="@color/text_primary"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/text_quiz_progress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/progress_40_48"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingTop="6dp">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/quiz_color"
                                android:contentDescription="@string/cd_icon" />

                            <TextView
                                android:id="@+id/text_quiz_topic2"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/relationship"
                                android:layout_marginStart="8dp"
                                android:textColor="@color/text_primary"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/text_quiz_progress2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/progress_6_24"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Flash card learning card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_flash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/text_flash_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="@string/flashcard_learning"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:contentDescription="@string/cd_icon"
                                android:src="@drawable/flashcard_color" />

                            <TextView
                                android:id="@+id/text_flash_topic"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:text="@string/fruits"
                                android:textColor="@color/text_primary"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/text_flash_progress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/progress_0_0"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingTop="6dp">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:contentDescription="@string/cd_icon"
                                android:src="@drawable/flashcard_color" />

                            <TextView
                                android:id="@+id/text_flash_topic2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:text="@string/sample_set_2"
                                android:textColor="@color/text_primary"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/text_flash_progress2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/progress_0_0"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
