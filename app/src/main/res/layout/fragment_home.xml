<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_background"
    android:paddingBottom="60dp"
    tools:context=".ui.home.HomeFragment">

    <!-- Header: 20% height (~2/10) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/purple_700"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.20"
        android:paddingStart="20dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <LinearLayout
            android:id="@+id/header_text_block"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/header_right"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/text_greeting_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi, Pham Khoi"
                android:textColor="@color/on_purple"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_greeting_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Let's start learning"
                android:textColor="@color/on_purple"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Right side: streak number + avatar -->
        <LinearLayout
            android:id="@+id/header_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center_vertical">

            <!-- Streak icon and number -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginEnd="12dp">

                <ImageView
                    android:id="@+id/image_streak"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/streak"
                    android:contentDescription="streak_icon" />

                <TextView
                    android:id="@+id/text_streak_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="@color/on_purple"
                    android:textStyle="bold"
                    android:layout_marginStart="6dp" />
            </LinearLayout>

            <!-- Avatar (round) -->
            <ImageView
                android:id="@+id/image_avatar"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/image_avatar"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_avatar_bg"
                android:contentDescription="@string/cd_avatar"
                android:clickable="true"
                android:focusable="true"
                android:clipToOutline="true"
                android:outlineProvider="background" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Quote card: placed to overlap header and lower content (title moved inside) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_dialog"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:translationZ="12dp"
        android:layout_marginTop="-45dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@color/card_background"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/text_today_quotes_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today's Quote"
                android:textSize="12sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="3dp" />

            <TextView
                android:id="@+id/textDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="4"
                android:paddingTop="3dp"
                android:text="@string/today_quote"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Content area below the quote card (scroll) -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/main_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/card_dialog"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Study days (streak) area: moved into lower part (scroll) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="@color/card_background"
                android:layout_marginTop="1dp">

                <TextView
                    android:id="@+id/text_study_days_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Study days"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/text_primary" />

                <LinearLayout
                    android:id="@+id/row_days"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:gravity="center"
                    android:weightSum="7">

                    <!-- Monday -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="4dp">

                        <ImageButton
                            android:id="@+id/day_mon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/daycheck_no"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Mon"
                            android:padding="4dp"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mon"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- Tuesday -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="4dp">

                        <ImageButton
                            android:id="@+id/day_tue"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/daycheck_no"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Tue"
                            android:padding="4dp"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tue"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- Wednesday -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="4dp">

                        <ImageButton
                            android:id="@+id/day_wed"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/daycheck_no"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Wed"
                            android:padding="4dp"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wed"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- Thursday -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="4dp">

                        <ImageButton
                            android:id="@+id/day_thu"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/daycheck_no"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Thu"
                            android:padding="4dp"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thu"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- Friday -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="4dp">

                        <ImageButton
                            android:id="@+id/day_fri"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/daycheck_no"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Fri"
                            android:padding="4dp"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fri"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- Saturday -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="4dp">

                        <ImageButton
                            android:id="@+id/day_sat"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/daycheck_no"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Sat"
                            android:padding="4dp"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sat"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- Sunday -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="4dp">

                        <ImageButton
                            android:id="@+id/day_sun"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/daycheck_no"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Sun"
                            android:padding="4dp"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sun"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/calendar"
                        android:contentDescription="calendar" />

                    <TextView
                        android:id="@+id/text_active_days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 Active day"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/text_secondary" />
                </LinearLayout>

            </LinearLayout>

            <!-- Cards (each is independent) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_vocab"
                android:layout_width="match_parent"
                android:layout_marginTop="12dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/text_vocab_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="Vocab learning"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/vocab_color"
                                android:contentDescription="icon" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Fruits"
                                android:layout_marginStart="8dp"
                                android:textColor="@color/text_primary"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/text_vocab_progress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="40/48"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingTop="6dp">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/vocab_color"
                                android:contentDescription="icon" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Education"
                                android:layout_marginStart="8dp"
                                android:textColor="@color/text_primary"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/text_vocab_progress2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6/24"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_quiz"
                android:layout_width="match_parent"
                android:layout_marginTop="12dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/text_quiz_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="Quiz taken"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/quiz_color"
                                android:contentDescription="icon" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Business"
                                android:layout_marginStart="8dp"
                                android:textColor="@color/text_primary"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/text_quiz_progress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="40/48"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingTop="6dp">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/quiz_color"
                                android:contentDescription="icon" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Relationship"
                                android:layout_marginStart="8dp"
                                android:textColor="@color/text_primary"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/text_quiz_progress2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6/24"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Flash card learning card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_flash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/text_flash_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="Flash card learning"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:contentDescription="icon"
                                android:src="@drawable/flashcard_color" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:text="Fruits"
                                android:textColor="@color/text_primary"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/text_flash_progress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0/0"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingTop="6dp">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:contentDescription="icon"
                                android:src="@drawable/flashcard_color" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:text="Sample set 2"
                                android:textColor="@color/text_primary"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/text_flash_progress2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0/0"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
