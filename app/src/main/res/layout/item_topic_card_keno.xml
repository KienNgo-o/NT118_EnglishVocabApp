<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="140dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/flashcard_bg">

    <!-- ConstraintLayout flattens hierarchy and gives precise constraints -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp">

        <!-- Save button (48dp touch target, smaller inner padding for icon) -->
        <ImageButton
            android:id="@+id/btn_save_topic"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="-5dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/cd_save_topic"
            android:padding="8dp"
            android:src="@drawable/save"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Difficulty (constrained between start and save button) -->
        <TextView
            android:id="@+id/txt_difficulty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/topic_card_secondary"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@+id/txt_topic_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Easy" />

        <!-- Topic title (wraps to 2 lines, constrained to available width) -->
        <TextView
            android:id="@+id/txt_topic_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:textColor="@color/topic_card_title"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/txt_word_count"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_difficulty"
            tools:text="Topic Name" />

        <!-- Word count -->
        <TextView
            android:id="@+id/txt_word_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="@color/topic_card_secondary"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@+id/img_topic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_topic_name"
            tools:text="10 words" />

        <!-- Topic image centered below the word count -->
        <ImageView
            android:id="@+id/img_topic"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/topic_image"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_word_count"
            tools:src="@drawable/animals" />

        <!-- Lock overlay (covers the entire card when visible) -->
        <ImageView
            android:id="@+id/img_lock_icon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#80000000"
            android:contentDescription="@null"
            android:scaleType="center"
            android:src="@drawable/ic_lock"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.048"
            app:tint="@color/white" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>