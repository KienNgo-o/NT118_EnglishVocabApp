<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <!-- Centered dialog card -->
    <LinearLayout
        android:id="@+id/dialog_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/dialog_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_pronounce_title"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textColor="#222222"
            android:lineSpacingExtra="2dp"
            android:textStyle="bold"
            android:paddingBottom="14dp" />

        <!-- Items: each group is icon above label -->
        <LinearLayout
            android:id="@+id/items_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="18dp">

            <!-- Wifi -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingTop="6dp"
                android:paddingBottom="12dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/wifi"
                    android:contentDescription="@string/cd_wifi_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_wifi_label"
                    android:textSize="16sp"
                    android:textColor="#444444"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center" />
            </LinearLayout>

            <!-- Quiet -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingTop="6dp"
                android:paddingBottom="12dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/quiet"
                    android:contentDescription="@string/cd_quiet_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_quiet_label"
                    android:textSize="16sp"
                    android:textColor="#444444"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center" />
            </LinearLayout>

            <!-- Headphones / Microphone -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/microphone"
                    android:contentDescription="@string/cd_microphone_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_micro_label"
                    android:textSize="16sp"
                    android:textColor="#444444"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center" />
            </LinearLayout>

        </LinearLayout>

        <!-- Start button -->
        <Button
            android:id="@+id/btn_start"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/btn_start"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@drawable/button_bg"
            android:layout_marginTop="6dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>