<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_purple"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".ui.vocab.VocabFragment">

    <!-- Header (same style as other fragments) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <ImageButton
                android:id="@+id/btn_return"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:contentDescription="@string/cd_back"
                android:padding="8dp"
                android:src="@drawable/return_final" />

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/title_quiz"
                android:textColor="@color/dark_purple"
                android:textSize="24sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <View
            android:id="@+id/top_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/dark_purple" />
    </LinearLayout>

    <!-- Content area -->
    <LinearLayout
        android:id="@+id/lower_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 1) Question indicators (e.g., "Question 1 of 3" and 3 small dots) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/txt_question_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_1_of_3"
                android:textColor="@color/purple_700"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <View
                    android:id="@+id/indicator_1"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/tab_selector" />

                <View
                    android:id="@+id/indicator_2"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/tab_selector" />

                <View
                    android:id="@+id/indicator_3"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/tab_selector" />

            </LinearLayout>
        </LinearLayout>

        <!-- 2) Question content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="@drawable/word_type_bg">

            <TextView
                android:id="@+id/txt_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/question_example"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 3) Answer buttons (4 options) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:weightSum="4">

            <Button
                android:id="@+id/btn_answer_a"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="8dp"
                android:text="@string/answer_a"
                android:background="@drawable/tab_selector"
                android:textAllCaps="false"
                android:textColor="@color/dark_purple" />

            <Button
                android:id="@+id/btn_answer_b"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="8dp"
                android:text="@string/answer_b"
                android:background="@drawable/tab_selector"
                android:textAllCaps="false"
                android:textColor="@color/dark_purple" />

            <Button
                android:id="@+id/btn_answer_c"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="8dp"
                android:text="@string/answer_c"
                android:background="@drawable/tab_selector"
                android:textAllCaps="false"
                android:textColor="@color/dark_purple" />

            <Button
                android:id="@+id/btn_answer_d"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/answer_d"
                android:background="@drawable/tab_selector"
                android:textAllCaps="false"
                android:textColor="@color/dark_purple" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
