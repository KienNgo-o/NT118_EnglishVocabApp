<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/flashcard_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_gray">

    <!-- Toolbar (title + back) placed as direct children of ConstraintLayout -->
    <RelativeLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_back_topic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:contentDescription="@string/back_to_topics"
            android:src="@drawable/return_final" />

        <TextView
            android:id="@+id/txt_topic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/topic_label"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/dark_purple" />
    </RelativeLayout>

    <!-- Divider as direct child so other views can constrain to it -->
    <View
        android:id="@+id/top_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/dark_purple"
        app:layout_constraintTop_toBottomOf="@id/toolbar_layout" />

    <!-- Progress pill -->
    <TextView
        android:id="@+id/txt_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_marginTop="12dp"
        android:text="@string/progress_default"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_progress_pill"
        app:layout_constraintTop_toBottomOf="@id/top_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <FrameLayout
        android:id="@+id/flashcard_resizer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintDimensionRatio="3:4"
        app:layout_constraintTop_toBottomOf="@id/txt_progress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Use MaterialCardView to get proper rounded corners and clipping -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false"
            android:clipToPadding="false">

            <!-- Mặt trước (Tiếng Anh) -->
            <LinearLayout
                android:id="@+id/frontView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@color/flashcard_bg"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textTerm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/watermelon_term"
                    android:textColor="@color/dark_purple"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textDefinition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:textColor="@color/flashcard_text"
                    android:text="@string/watermelon_definition"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/textExample"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:textColor="@color/flashcard_text"
                    android:text="@string/watermelon_example"
                    android:textSize="16sp"
                    android:textStyle="italic"/>
            </LinearLayout>

            <!-- Mặt sau (Tiếng Việt) -->
            <LinearLayout
                android:id="@+id/backView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@color/light_white_gray"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textVietnameseTerm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vietnamese_term"
                    android:textColor="@color/dark_purple"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textVietnameseDefinition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/flashcard_text"
                    android:layout_marginTop="18dp"
                    android:text="@string/vietnamese_definition"
                    android:textSize="16sp"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>

    <!-- Congrats container aligned over flashcard_resize -->
    <!-- Congrats container aligned over flashcard_resizer -->
    <LinearLayout
        android:id="@+id/congrats_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/flashcard_resizer"
        app:layout_constraintBottom_toBottomOf="@id/flashcard_resizer"
        app:layout_constraintStart_toStartOf="@id/flashcard_resizer"
        app:layout_constraintEnd_toEndOf="@id/flashcard_resizer"
        android:visibility="gone">

        <!-- Khung thông báo Congratulations -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/dark_purple"
            android:padding="24dp"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_congrats_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/congrats_title"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_congrats_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/congrats_subtitle"
                android:textColor="#FF69B4"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"/>

        </LinearLayout>

        <!-- Nút Return -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_return_after_congrats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/return_label"
            android:backgroundTint="@color/light_purple"
            android:textColor="@color/dark_purple"
            app:cornerRadius="24dp"/>
    </LinearLayout>


    <!-- Navigation buttons moved directly under card -->
    <!-- Updated navigation buttons block in `app/src/main/res/layout/fragment_flashcard2.xml` -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/nav_buttons_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/flashcard_resizer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="0dp"
        android:layout_marginTop="12dp">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_prev"
            android:layout_width="84dp"
            android:layout_height="68dp"
            android:layout_marginStart="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/bg_nav_prev"
            android:src="@drawable/back_arrow"
            android:tint="@color/flashcard_arrow_tint"
            android:scaleType="center"
            android:contentDescription="@string/previous_label"
            android:padding="12dp"
            android:elevation="4dp"
            app:backgroundTint="@null" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_next"
            android:layout_width="84dp"
            android:layout_height="68dp"
            android:layout_marginEnd="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/bg_nav_next"
            android:src="@drawable/next_arrow"
            android:tint="@color/flashcard_arrow_tint"
            android:scaleType="center"
            android:contentDescription="@string/next_label"
            android:padding="12dp"
            android:elevation="4dp"
            app:backgroundTint="@null" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
