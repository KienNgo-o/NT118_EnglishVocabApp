<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flashcard_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_gray">

    <RelativeLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_back_topic"
            android:layout_width="52dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:contentDescription="@string/back_to_topics"
            android:src="@drawable/return_final" />

        <TextView
            android:id="@+id/txt_topic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/dark_purple"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="TOPIC" />
    </RelativeLayout>

    <View
        android:id="@+id/top_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/dark_purple"
        app:layout_constraintTop_toBottomOf="@id/toolbar_layout" />

    <TextView
        android:id="@+id/txt_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_marginTop="12dp"
        android:text="@string/progress_default"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_progress_pill"
        app:layout_constraintTop_toBottomOf="@id/top_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <FrameLayout
        android:id="@+id/flashcard_resizer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintDimensionRatio="3:4"
        app:layout_constraintTop_toBottomOf="@id/txt_progress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:id="@+id/cardContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false">

            <LinearLayout
                android:id="@+id/frontView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@drawable/flashcard_front_bg"
                android:gravity="start">

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="43dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textTerm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dark_purple"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        tools:text="Red" />

                    <TextView
                        android:id="@+id/textPOS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dark_purple"
                        android:textSize="20sp"
                        android:textStyle="italic"
                        tools:text="(noun)" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/textPhonetic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/dark_purple"
                        android:textSize="20sp"
                        tools:text="'/red/'" />

                    <ImageView
                        android:id="@+id/btnAudio"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="12dp"
                        android:background="?attr/selectableItemBackgroundBorderless"

                        android:contentDescription="@string/play_audio"

                        android:padding="4dp"

                        android:src="@drawable/ic_audio_speaker"

                        app:tint="@color/dark_purple" />

                    <ImageView
                        android:id="@+id/imgRegion"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="8dp"
                        android:contentDescription="@string/region_flag"
                        tools:src="@drawable/ic_flag_us" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textDefinition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:textColor="@color/flashcard_text"
                    android:textSize="18sp"
                    tools:text="Definition: The color of blood." />

                <TextView
                    android:id="@+id/textExample"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:textColor="@color/flashcard_text"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    tools:text="Example: Red is my favorite color." />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/backView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@drawable/flashcard_back_bg"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textVietnameseTerm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_purple"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    tools:text="màu đỏ" />

                <TextView
                    android:id="@+id/textVietnamesePOS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/dark_purple"
                    android:textSize="20sp"
                    android:textStyle="italic"
                    tools:text="(danh từ)" />
            </LinearLayout>

        </FrameLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/congrats_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/flashcard_resizer"
        app:layout_constraintBottom_toBottomOf="@id/flashcard_resizer"
        app:layout_constraintStart_toStartOf="@id/flashcard_resizer"
        app:layout_constraintEnd_toEndOf="@id/flashcard_resizer"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/dark_purple"
            android:padding="24dp"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_congrats_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/congrats_title"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_congrats_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/congrats_subtitle"
                android:textColor="#FF69B4"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"/>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_return_after_congrats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/return_label"
            android:backgroundTint="@color/light_purple"
            android:textColor="@color/dark_purple"
            app:cornerRadius="24dp"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/nav_buttons_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/flashcard_resizer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="0dp"
        android:layout_marginTop="12dp">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_prev"
            android:layout_width="84dp"
            android:layout_height="68dp"
            android:layout_marginStart="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/bg_nav_prev"
            android:src="@drawable/back_arrow"
            android:tint="@color/flashcard_arrow_tint"
            android:scaleType="center"
            android:contentDescription="@string/previous_label"
            android:padding="12dp"
            android:elevation="4dp"
            app:backgroundTint="@null" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_next"
            android:layout_width="84dp"
            android:layout_height="68dp"
            android:layout_marginEnd="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/bg_nav_next"
            android:src="@drawable/next_arrow"
            android:tint="@color/flashcard_arrow_tint"
            android:scaleType="center"
            android:contentDescription="@string/next_label"
            android:padding="12dp"
            android:elevation="4dp"
            app:backgroundTint="@null" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>