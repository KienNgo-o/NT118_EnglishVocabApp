<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_purple"
    android:orientation="vertical"
    android:weightSum="10">

    <!-- Header (slightly moved down for alignment) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <ImageButton
                android:id="@+id/btn_return"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:contentDescription="@string/cd_back"
                android:padding="8dp"
                android:src="@drawable/return_final" />

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/title_quiz_matching"
                android:textColor="@color/dark_purple"
                android:textSize="24sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <View
            android:id="@+id/top_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/dark_purple" />
    </LinearLayout>

    <!-- Content area -->
    <LinearLayout
        android:id="@+id/lower_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Question counter -->
        <TextView
            android:id="@+id/txt_question_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question 1 of 3"
            android:textColor="@color/light_gray"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginBottom="8dp"/>

        <!-- Question card (centered, rounded background) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/rounded_white"
            android:padding="6dp">

            <TextView
                android:id="@+id/txt_question"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Match the pairs"
                android:textSize="16sp"
                android:textColor="@color/dark_purple"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Grid area with alternating image (CardView) and word (Button) tiles -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="12dp">

            <GridLayout
                android:id="@+id/grid_cards"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:columnCount="2"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:rowOrderPreserved="false"
                android:useDefaultMargins="true">

                <!-- Pair 1 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_img_1"
                    android:tag="p1"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp">
                    <ImageView
                        android:id="@+id/img_card_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:src="@drawable/pen" />
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/card_word_1"
                    android:tag="p1"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/rounded_white"
                    android:text="Pen"
                    android:textAllCaps="false"
                    android:textColor="@color/dark_purple" />

                <!-- Pair 2 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_img_2"
                    android:tag="p2"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp">
                    <ImageView
                        android:id="@+id/img_card_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:src="@drawable/books_films" />
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/card_word_2"
                    android:tag="p2"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/rounded_white"
                    android:text="Books"
                    android:textAllCaps="false"
                    android:textColor="@color/dark_purple" />

                <!-- Pair 3 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_img_3"
                    android:tag="p3"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp">
                    <ImageView
                        android:id="@+id/img_card_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:src="@drawable/apperances" />
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/card_word_3"
                    android:tag="p3"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/rounded_white"
                    android:text="Appearence"
                    android:textAllCaps="false"
                    android:textColor="@color/dark_purple" />

                <!-- Pair 4 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_img_4"
                    android:tag="p4"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp">
                    <ImageView
                        android:id="@+id/img_card_4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:src="@drawable/calendar" />
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/card_word_4"
                    android:tag="p4"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/rounded_white"
                    android:text="Calendar"
                    android:textAllCaps="false"
                    android:textColor="@color/dark_purple" />

            </GridLayout>

            <!-- Overlay for drawing connecting lines -->
            <View
                android:id="@+id/line_overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent" />

        </FrameLayout>

        <!-- Confirm button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="150dp"
            android:text="@string/confirm"
            android:background="@drawable/rounded_orange"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>
