<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_purple"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".ui.vocab.VocabFragment">

    <!-- Upper part (now split into 2 equal parts) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <!-- Upper part - top half -->
        <!-- xml -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Toolbar: return button (left) + centered title -->

            <!-- Bottom divider line -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <ImageButton
                    android:id="@+id/btn_return"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:contentDescription="@string/cd_back"
                    android:padding="8dp"
                    android:src="@drawable/return_final" />

                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Vocabulary"
                    android:textColor="@color/dark_purple"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:id="@+id/top_divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/dark_purple" />
        </LinearLayout>


        <!-- Upper part - bottom half (new) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:elevation="4dp"
                android:background="@drawable/rounded_white"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/filter"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/filter"
                    android:contentDescription="@null" />


                <EditText
                    android:id="@+id/search_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@id/search_topic"
                    android:layout_toEndOf="@id/filter"
                    android:background="@android:color/transparent"
                    android:hint="Search topic..."
                    android:textColorHint="@android:color/darker_gray"
                    android:textColor="@android:color/black"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:inputType="text"
                    android:maxLines="1"
                    android:importantForAutofill="no" />


                <ImageView
                    android:id="@+id/search_topic"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/search_topic"
                    app:tint="@color/search_icon_color"
                    app:tintMode="src_in"
                    android:contentDescription="@string/cd_search_topic" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <!-- Lower part: RecyclerView to list topics (replaces static cards) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_topics"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.3"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:clipToPadding="false" />

</LinearLayout>
