<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.auth.SignUpFragment">

    <!-- 1. AppBarLayout chứa Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_700"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            app:title="Sign Up"
            app:titleCentered="true"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- 2. Nội dung chính, có thể cuộn được -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp">

            <!-- Heading -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/sign_up_heading"
                android:textSize="22sp"
                android:textColor="@color/purple_700"
                android:textStyle="bold"
                android:textAlignment="center"
                android:lineSpacingExtra="2dp" />

            <!-- Spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- Username label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username_label"
                android:textSize="14sp"
                android:textColor="#444" />

            <EditText
                android:id="@+id/input_username"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@color/light_gray"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:hint="@string/username_hint"
                android:inputType="textPersonName"
                android:imeOptions="actionNext"
                android:autofillHints="username" />

            <!-- Email label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/email_label"
                android:textSize="14sp"
                android:textColor="#444" />

            <EditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@color/light_gray"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:hint="@string/email_hint"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext"
                android:autofillHints="emailAddress" />

            <!-- Password label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/password_label"
                android:textSize="14sp"
                android:textColor="#444" />

            <EditText
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@color/light_gray"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:hint="@string/password_hint"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
                android:autofillHints="newPassword" />

            <!-- Continue button -->
            <Button
                android:id="@+id/button_sign_up"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/purple_700"
                android:text="@string/continue_label"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:textAllCaps="false" />

            <!-- Divider with Or -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="18dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#DDD" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="@string/or_label"
                    android:textColor="#777" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#DDD" />
            </LinearLayout>

            <!-- Social buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:weightSum="2">

                <ImageButton
                    android:id="@+id/social_facebook_sign_up"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:background="@color/light_white_gray"
                    android:src="@drawable/facebook"
                    android:scaleType="centerInside"
                    android:contentDescription="@string/cd_facebook" />

                <ImageButton
                    android:id="@+id/social_google_sign_up"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:background="@color/light_white_gray"
                    android:src="@drawable/googlelogo"
                    android:scaleType="centerInside"
                    android:contentDescription="@string/cd_google" />
            </LinearLayout>

            <!-- Bottom login link -->
            <TextView
                android:id="@+id/button_go_to_sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:gravity="center"
                android:text="@string/sign_in_prompt"
                android:textColor="#444"
                android:paddingTop="10dp"
                android:paddingBottom="6dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
