<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_purple"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".ui.quiz.FillAnswerQuizFragment">

    <!-- Header moved down for alignment with other fragments -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <ImageButton
                android:id="@+id/btn_return"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:contentDescription="@string/cd_back"
                android:padding="8dp"
                android:src="@drawable/return_final" />

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/title_quiz_fillanswer"
                android:textColor="@color/dark_purple"
                android:textSize="24sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <View
            android:id="@+id/top_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/dark_purple" />
    </LinearLayout>

    <!-- Content area -->
    <LinearLayout
        android:id="@+id/lower_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingBottom="96dp">  <!-- keep space above bottom nav -->

        <!-- Question index -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/txt_question_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/question_1_of_3"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <View
                    android:id="@+id/indicator_1"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/tab_selector" />

                <View
                    android:id="@+id/indicator_2"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/tab_selector" />

                <View
                    android:id="@+id/indicator_3"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/tab_selector" />

            </LinearLayout>
        </LinearLayout>

        <!-- Question card: now shows label + partial word (e.g. `y_ellow`) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:padding="20dp"
            android:background="@drawable/rounded_white">

            <TextView
                android:id="@+id/txt_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fill in the blank:"
                android:textColor="@color/dark_purple"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:id="@+id/txt_partial_word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="y_ellow"
                android:textColor="@color/orange"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center" />
        </LinearLayout>

        <!-- Input + confirm -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="40dp">

            <EditText
                android:id="@+id/edt_answer"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/rounded_white"
                android:hint="@string/your_answer"
                android:padding="12dp"
                android:inputType="text"
                android:textColor="@color/dark_purple"
                android:textColorHint="@color/gray"
                android:importantForAutofill="no" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:text="@string/confirm"
                android:background="@drawable/rounded_orange"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
