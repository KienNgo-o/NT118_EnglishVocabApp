<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_gray"
    android:orientation="vertical"
    android:weightSum="10">

    <!-- Upper part (toolbar + search) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <!-- Toolbar (fragment title, keep so fragment still shows "FLASHCARDS") -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Toolbar: return button (left) + centered title -->

            <!-- Bottom divider line -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <ImageButton
                    android:id="@+id/btn_return"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:contentDescription="@string/cd_back"
                    android:padding="8dp"
                    android:src="@drawable/return_final" />

                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Flashcards"
                    android:textColor="@color/dark_purple"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:id="@+id/top_divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/dark_purple" />
        </LinearLayout>

        <!-- Search area (match vocab margins / rounded style) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:elevation="4dp"
                android:background="@drawable/rounded_white"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/filter"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/filter" />

                <EditText
                    android:id="@+id/search_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/search_flashcard"
                    android:layout_toEndOf="@id/filter"
                    android:background="@android:color/transparent"
                    android:hint="Search topic..."
                    android:textColorHint="@android:color/darker_gray"
                    android:textColor="@android:color/black"
                    android:padding="12dp" />

                <ImageView
                    android:id="@+id/search_flashcard"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/search_topic" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Lower part: two-column grid inside ScrollView -->
    <ScrollView
        android:id="@+id/scroll_topics"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="16dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_flash_1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="140dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/light_purple">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/txt_flash_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:text="Fruits"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

                        <ImageView
                            android:id="@+id/img_flash_1"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_below="@id/txt_flash_1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="6dp"
                            android:src="@drawable/fruits"
                            android:adjustViewBounds="true" />
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_flash_2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="140dp"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/light_purple">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/txt_flash_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:text="Animals"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

                        <ImageView
                            android:id="@+id/img_flash_2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_below="@id/txt_flash_2"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="6dp"
                            android:src="@drawable/animals"
                            android:adjustViewBounds="true" />
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="16dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_flash_3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="140dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/light_purple">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/txt_flash_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:text="Personalities"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

                        <ImageView
                            android:id="@+id/img_flash_3"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_below="@id/txt_flash_3"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="6dp"
                            android:src="@drawable/personalities"
                            android:adjustViewBounds="true" />
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_flash_4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="140dp"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/light_purple">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/txt_flash_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:text="Careers"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

                        <ImageView
                            android:id="@+id/img_flash_4"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_below="@id/txt_flash_4"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="6dp"
                            android:src="@drawable/careers"
                            android:adjustViewBounds="true" />
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Row 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="16dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_flash_5"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="140dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/light_purple">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/txt_flash_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:text="Appearances"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

                        <ImageView
                            android:id="@+id/img_flash_5"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_below="@id/txt_flash_5"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="6dp"
                            android:src="@drawable/apperances"
                            android:adjustViewBounds="true" />
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_flash_6"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="140dp"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/light_purple">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/txt_flash_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:text="Travel"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

                        <ImageView
                            android:id="@+id/img_flash_6"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_below="@id/txt_flash_6"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="6dp"
                            android:src="@drawable/travel"
                            android:adjustViewBounds="true" />
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>