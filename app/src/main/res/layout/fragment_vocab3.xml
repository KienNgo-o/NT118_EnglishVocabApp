<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_purple"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".ui.vocab.VocabFragment">

    <!-- Upper part (now split into 2 equal parts) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <!-- Upper part - top half -->
        <!-- xml -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Toolbar: return button (left) + centered title -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <ImageButton
                    android:id="@+id/btn_return"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:contentDescription="Back"
                    android:padding="8dp"
                    android:src="@drawable/return_button" />

                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Vocabulary"
                    android:textSize="24sp"
                    android:textColor="@color/dark_purple"
                    android:textStyle="bold" />
            </RelativeLayout>

            <!-- Bottom divider line -->
            <View
                android:id="@+id/top_divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/dark_purple" />
        </LinearLayout>


        <!-- Upper part - bottom half (new) -->
        <!-- Tabs row (styled rounded container with active pill) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp"
            android:padding="6dp"
            android:background="@drawable/tabs_bg">

            <!-- Equal width tabs: use selector for selected / pressed states -->
            <TextView
                android:id="@+id/tab_definition"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/tab_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/tab_definition"
                android:textAllCaps="false"
                android:textColor="@color/tab_text_color"
                android:textSize="14sp"
                android:contentDescription="@string/cd_tab_definition" />

            <TextView
                android:id="@+id/tab_forms"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/tab_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/tab_forms"
                android:textAllCaps="false"
                android:textColor="@color/tab_text_color"
                android:textSize="14sp"
                android:contentDescription="@string/cd_tab_forms" />

            <TextView
                android:id="@+id/tab_synonyms"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/tab_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/tab_synonyms"
                android:textAllCaps="false"
                android:textColor="@color/tab_text_color"
                android:textSize="14sp"
                android:contentDescription="@string/cd_tab_synonyms" />

        </LinearLayout>

    </LinearLayout>

    <!-- Lower part: replace ScrollView with a non-scrolling container.
         Everything except the Example box is moved above the white rounded container.
         Only the Example section stays inside rounded_white. -->
    <LinearLayout
        android:id="@+id/lower_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Moved: main definition content (word, type, pronunciation, meaning)
             Renamed id from content_definition_main -> content_definition -->
        <LinearLayout
            android:id="@+id/content_definition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Word + type -->

            <!-- Pronunciation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/wordText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Watermelon"
                    android:textColor="@color/purple_700"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <!-- Noun pill + orange line -->
                <TextView
                    android:id="@+id/wordType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/word_type_bg"
                    android:paddingStart="12dp"
                    android:paddingTop="6dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="6dp"
                    android:text="Noun"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="120dp"
                    android:layout_height="6dp"
                    android:layout_marginStart="-5dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/orange_line" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:baselineAligned="false">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/uk"
                        android:contentDescription="UK flag" />

                    <TextView
                        android:id="@+id/ukPron"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="/ˈwɔːtəˌmelən/"
                        android:textColor="@color/black" />

                    <ImageView
                        android:id="@+id/playUk"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="4dp"
                        android:src="@drawable/sound"
                        android:contentDescription="Play UK pronunciation" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|end"
                    android:baselineAligned="false">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/us"
                        android:contentDescription="US flag" />

                    <TextView
                        android:id="@+id/usPron"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="/ˈwɑːrəmˌelən/"
                        android:textColor="@color/black" />

                    <ImageView
                        android:id="@+id/playUs"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="4dp"
                        android:src="@drawable/sound"
                        android:contentDescription="Play US pronunciation" />
                </LinearLayout>
            </LinearLayout>

            <!-- thin divider under pronunciation -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="@color/light_gray" />

            <!-- Meaning -->
            <TextView
                android:id="@+id/definitionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01"
                android:textColor="@color/white"
                android:layout_marginTop="16dp"
                android:background="@drawable/blue_badge"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/definitionVi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trái dưa hấu. Cây dưa hấu."
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/definitionEn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A large, round or oval-shaped fruit with dark green skin, sweet pink flesh, and a lot of black seeds."
                android:textColor="@color/black"
                android:layout_marginTop="4dp"
                android:lineSpacingExtra="3dp"
                android:textSize="15sp"
                android:fontFamily="sans-serif"
                android:textStyle="italic" />
        </LinearLayout>

        <!-- Forms tab content (moved above white box) -->
        <LinearLayout
            android:id="@+id/content_forms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forms will appear here"
                android:textColor="@color/black" />

        </LinearLayout>

        <!-- Synonyms tab content (moved above white box) -->
        <LinearLayout
            android:id="@+id/content_synonyms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Synonyms &amp; acronyms will appear here"
                android:textColor="@color/black" />

        </LinearLayout>

        <!-- White rounded container: keep only the Example section inside -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:elevation="3dp"
            android:layout_margin="8dp"
            android:backgroundTint="@android:color/white"
            android:backgroundTintMode="src_in"
            android:layout_gravity="center"
            android:background="@drawable/rounded_white">

            <!-- Example section (only this remains inside the white rounded box) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/example_box_bg"
                android:padding="12dp"
                android:layout_marginTop="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Example"
                    android:textColor="@color/purple_700"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/example1_en"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Watermelon is my favorite fruit in summer."
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/example1_vi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dưa hấu là trái cây yêu thích của tôi vào mùa hè."
                    android:textColor="@color/gray"
                    android:textStyle="italic"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp"
                    android:textSize="13sp" />

                <!-- divider between examples -->

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
