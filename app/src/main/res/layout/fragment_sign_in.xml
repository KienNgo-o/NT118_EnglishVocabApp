<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="24dp"
        android:paddingBottom="24dp">

        <!-- Illustration -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/applogo"
            android:contentDescription="@string/cd_illustration" />

        <!-- Heading -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/sign_in_heading"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:lineSpacingExtra="2dp" />

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="18dp" />

        <!-- Username label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username_label"
            android:textSize="12sp"
            android:textColor="#444" />

        <EditText
            android:id="@+id/input_username"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@color/light_gray"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:hint="@string/username_hint"
            android:inputType="textPersonName"
            android:autofillHints="username"
            android:imeOptions="actionNext" />

        <!-- Password label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/password_label"
            android:textSize="12sp"
            android:textColor="#444" />

        <EditText
            android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@color/light_gray"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:hint="@string/password_hint"
            android:inputType="textPassword"
            android:autofillHints="password"
            android:imeOptions="actionDone" />

        <TextView
            android:id="@+id/button_forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/forgot_password"
            android:textColor="#E91E63"
            android:textSize="13sp" />

        <!-- Continue button -->
        <Button
            android:id="@+id/button_sign_in_to_main"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#5B4BEE"
            android:text="@string/continue_label"
            android:textColor="@android:color/white"
            android:textAllCaps="false" />

        <!-- Divider with Or -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="18dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#DDD" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="@string/or_label"
                android:textColor="#777" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#DDD" />
        </LinearLayout>

        <!-- Social buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:weightSum="2">

            <ImageButton
                android:id="@+id/social_facebook_sign_in"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:background="@color/light_white_gray"
                android:src="@drawable/facebook"
                android:scaleType="centerInside"
                android:contentDescription="@string/cd_facebook" />

            <ImageButton
                android:id="@+id/social_google_sign_in"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:background="@color/light_white_gray"
                android:src="@drawable/googlelogo"
                android:scaleType="centerInside"
                android:contentDescription="@string/cd_google" />
        </LinearLayout>

        <!-- Bottom signup link -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:text="@string/sign_up_prompt"
            android:textColor="#444"
            android:paddingTop="10dp"
            android:paddingBottom="6dp"
            android:id="@+id/button_go_to_sign_up" />

    </LinearLayout>
</ScrollView>
