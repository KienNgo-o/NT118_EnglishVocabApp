<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Kích thước mặc định (có thể bỏ nếu bạn muốn nó co dãn theo view) -->
    <size
        android:width="40dp"
        android:height="40dp" />

    <!-- Gradient từ xanh sang tím -->
    <gradient
        android:type="linear"
        android:angle="45"
        android:startColor="@color/badge_start"
        android:endColor="@color/badge_end"
        android:useLevel="false" />

    <!-- (Tuỳ chọn) viền mỏng -->
    <stroke
        android:width="1dp"
        android:color="@android:color/transparent" />
</shape>
