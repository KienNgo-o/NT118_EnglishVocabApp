<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer gradient ring (sweep gradient makes the border cycle around the circle) -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="sweep"
                android:startColor="@color/dark_purple"
                android:centerColor="@color/purple_500"
                android:endColor="@color/purple_700"
                android:useLevel="false" />
        </shape>
    </item>

    <!-- Inner solid circle inset to create the visible border thickness -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <solid android:color="@color/quiz_button_bg" />
        </shape>
    </item>

</layer-list>
