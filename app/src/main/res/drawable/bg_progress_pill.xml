<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Rounded purple pill background used by the progress TextView -->
    <solid android:color="@color/light_purple" />

    <!-- Make the pill nicely rounded -->
    <corners android:radius="24dp" />

    <!-- Optional small padding (not required because TextView already has padding) -->
    <padding android:left="4dp" android:top="2dp" android:right="4dp" android:bottom="2dp" />

</shape>
