<resources>
    <!-- Base application theme. -->
    <style name="Theme.NT118_EnglishVocabApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/dark_purple</item>
        <!-- On-primary should contrast with the primary color; use white for safety on darker primaries -->
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Minimal fallback ShapeAppearance to satisfy resource linking when a simple base style is required -->
    <style name="ShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <!-- Rounded shape appearance used by dialog card -->
    <style name="ShapeAppearance.Rounded12">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- Theme overlay for the rating dialog to use MaterialAlertDialog styling -->
    <style name="RateDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Apply rounded corners via shapeAppearance -->
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Rounded12</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Rounded12</item>
        <!-- Ensure dialog width is reasonably constrained on tablets -->
        <item name="android:windowMinWidthMajor">80%</item>
    </style>
</resources>